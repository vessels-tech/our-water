{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    // TODO: disable - this is mainly because of duplicate definitions in firebase libs
    "skipLibCheck": true,
    //TODO: disable this eventually, 
    "noImplicitReturns": false,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "allowJs": true,
    "jsx": "react",
    "types": [
      "node", 
      "mocha"
    ],
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.unit.ts",
    "**/*.service.ts"
  ]
}
