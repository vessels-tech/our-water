{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "noImplicitReturns": false,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "allowJs": true,
    "jsx": "react",
    "types": [
      "node",
      "mocha"
    ],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.unit.ts",
    "**/*.service.ts"
  ]
}
